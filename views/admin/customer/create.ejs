<div class="">
    <h1 class="h2 border-bottom"> <%- title %> </h1>
    
    <form action="" method="POST" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Name" class="form-control">
        </div>  
        <div class="form-group">
            <label for="name">Phone</label>
            <input type="text" name="phone" placeholder="Phone" class="form-control">
        </div> 
        <div class="form-group">
            <label for="name">Email</label>
            <input type="email" name="email" placeholder="Email" class="form-control">
        </div>  
        <div class="form-group">
            <label for="name">Address</label>
            <textarea  name="address" placeholder="Address" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="township">Township </label>
            <select name="township_id" id="township" class="form-control">
                <option value="">Select Township</option>
               <% for(var i = 0; i < townships.length; i++ ) { %>
                <option value="<%= townships[i].id %>"><%= townships[i].name %></option>
                <% } %>
            </select>
        </div>     
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 text-left">
                    <a href="/admin/categories" class="btn btn-warning">Back</a>
                </div>
                <div class="col-md-6 text-right">
                    <button class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
        
    </form>

</div>